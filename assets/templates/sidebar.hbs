<div class = "attractions-container">
    <p>{{this.name}}</p>
{{#each attractions}}
    <div class="attraction-card">
        <a class="attraction-name" href="#">{{name}}</a>
        {{#if areaName}}
            <p class="attraction-type text-muted my-1">{{areaName}}</p>
            {{else}}
            <p class = "attraction-type text-muted my-1">{{typeName}}</p>
        {{/if}}
        <div class = "attraction-details mt-3 mb-0">
            {{#if times}}
                <ul>
                    {{#each times}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            {{/if}}
            <p class="attraction-description mb-0">{{description}}</p>
        </div>
    </div>
{{/each}}
</div>